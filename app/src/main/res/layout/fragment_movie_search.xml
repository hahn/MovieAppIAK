<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity$MovieSearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_search_movie"
            android:singleLine="true"
            android:hint="Type title here..."
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:drawableEnd="@drawable/ic_action_search_dark"
            android:drawableRight="@drawable/ic_action_search_dark"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_movie_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>



</FrameLayout>
